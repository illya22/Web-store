@model IEnumerable<Store.Lib.Entities.Part>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="panel panel-default">
    <div class="panel-heading">
        <h3>List of parts</h3>
    </div>
    <div class="panel-body">
        <table class="table table-striped table-condensed table-bordered">
            <tr>
                <th class="text-right">ID</th>
                <th>Name</th>
                <th class="text-right">Price</th>
                <th class="text-right">Action</th>
            </tr>
            @foreach( var item in Model)
            {
                <tr>
                    <td class="text-right">@item.Part_Id</td>
                    <td>@Html.ActionLink(item.Name, "Edit", new {partId =  item.Part_Id})</td>
                    <td class="text-right">@item.Price.ToString("# $")</td>
                    <td class="text-center">
                        @using (Html.BeginForm("Delete", "Admin"))
                        {
                            @Html.Hidden("Part_Id", item.Part_Id)
                            <input type="submit" class="btn btn-default  " value="Delete" />
                        }
                    </td>
                </tr>
            }
        </table>
    </div>
    <div class="panel-footer">
        @Html.ActionLink("Add Part", "Create", null,new { @class = "btn btn-default"})
    </div>
</div>

 
