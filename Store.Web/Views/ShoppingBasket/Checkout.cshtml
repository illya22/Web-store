@model Store.Lib.Entities.ShippingDetails

@{
    ViewBag.Title = "PartStore : Checkout form";
}

<h2>Checkout now</h2>
<p>Please enter all user info</p>

@using (Html.BeginForm())
{
    @Html.ValidationSummary();
    <h3>Info</h3>
    <div class="form-group">
        <label>Your name:</label>
        @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
    </div>

   
    <h3>Address</h3>
    <div class="form-group">
        <label>Your address:</label>
        @Html.TextBoxFor(x => x.Line1, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label>Post office:</label>
        @Html.TextBoxFor(x => x.Line2, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label>Postcode:</label>
        @Html.TextBoxFor(x => x.Line3, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label>City:</label>
        @Html.TextBoxFor(x => x.City, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label>Country:</label>
        @Html.TextBoxFor(x => x.Country, new { @class = "form-control" })
    </div>

    <h3>Details</h3>

    <label>C.O.D?</label>
    <div>
        <label class="radio-inline"><input type="radio" name="optradio" checked>Yes</label>
        <label class="radio-inline"><input type="radio" name="optradio">No</label>
    </div>


    <label>Pay by Card?</label>
    <div>
        <label class="radio-inline"><input type="radio" name="optradio1" checked>Yes</label>
        <label class="radio-inline"><input type="radio" name="optradio1">No</label>
    </div>

    <div class="text-center">
        <input class="btn btn-primary" type="submit" value="Confirm" />
    </div>
}

